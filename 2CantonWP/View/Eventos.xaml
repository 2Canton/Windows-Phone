<Page
    x:Class="_2CantonWP.View.Eventos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_2CantonWP.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="ms-appx:///Assets/iglesia2.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="Puriscal"
            Style="{ThemeResource HeaderTextBlockStyle}"
            Margin="15,0,0,0"/>

        <ProgressRing 
            Name="progressRing" 
            Grid.Row="1" 
            Background="Transparent" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"/>

        <ListView 
            x:Name="lstvRutas" 
            Grid.Row="1"
            Margin="0,20" 
            IsItemClickEnabled="True" 
            ItemClick="lstvRutas_ItemClick" >

            <ListView.ItemTemplate>
                <DataTemplate>

                    <Border 
                        Width="Auto" 
                        Height="Auto" 
                        Margin="5"
                        Background="Black" 
                        CornerRadius="15" 
                        Padding="10"
                        Opacity="0.7">

                        <Grid
                            Width="360"
                            Height="Auto" >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Image 
                                Grid.Column="0"
                                Height="75" 
                                Width="75" 
                                Source="{Binding UrlImagen}" 
                                Stretch="UniformToFill"
                                Margin="10,0,10,0"/>

                            <Grid
                                Grid.Column="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock 
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Text="{Binding Nombre}" 
                                    TextWrapping="Wrap"
                                    FontSize="18"/>
                               

                                    <TextBlock 
                                        Grid.Row="2"
                                        TextTrimming="WordEllipsis"
                                        TextWrapping="Wrap"                             
                                        FontSize="16" > 
                                        <Run Text="Fecha: " />
                                        <Run Text="{Binding Path=Fecha}" />
                                    </TextBlock>

                                    <TextBlock 
                                        Grid.Row="3"
                                        TextTrimming="WordEllipsis"
                                        TextWrapping="Wrap"                             
                                        FontSize="16"  >
                                        <Run Text="Hora: " />
                                        <Run Text="{Binding Path=Hora}" />
                                    </TextBlock>

                                    <TextBlock 
                                        Grid.Row="4"
                                        TextTrimming="WordEllipsis"
                                        TextWrapping="Wrap"
                                        FontSize="16">  
                            
                                        <Run Text="Costo: " />
                                        <Run Text="{Binding Path=Costo}" />

                                    </TextBlock>

                                    <TextBlock 
                                        Margin="0,10,0,0"
                                        Grid.Row="5"
                                        TextTrimming="WordEllipsis"
                                        TextWrapping="Wrap"
                                        FontSize="16"
                                        Text="{Binding Descripcion}">  

                                    </TextBlock>

                               
                                
                            </Grid>

                        </Grid>

                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid
            Name="gridError"
            Grid.Row="1"
            Background="Black"
            Opacity="0.7">

            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>


            <Image 
               Grid.Row="0"
               Source="ms-appx:///Assets/sad.png"
               Width="150"
                Margin="10,70,10,10"/>

            <TextBlock
                 Grid.Row="1"
                Name="txtError"
                TextWrapping="Wrap"
                Height="Auto"
                TextAlignment="Center"
                Text="¡Vaya ha ocurrido un error al cargar, verifica la conexión a internet e intenta de nuevo" FontSize="21.333"  />


        </Grid>

        <MediaElement x:Name="feedbackMediaElement"/>

    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Name="btnRefresh" Label="Actualizar" Icon="Refresh"  Click="btnRefresh_Click" />
            <AppBarButton x:Name="btnSpeech" Label="Reproducir" Icon="Play"  Click="btnSpeech_Click" />
            <AppBarButton x:Name="btnSpeechStop" Label="Detener" Icon="Stop"  Click="btnSpeechStop_Click" />

        </CommandBar>
    </Page.BottomAppBar>


</Page>
